# imports: http://example.org/ontology/uco-time
# imports: http://example.org/shapes/sh-time-editors-draft

@prefix drafting: <http://example.org/ontology/drafting/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sh-uco-time: <http://example.org/shapes/sh-uco-time/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix uco-action: <https://ontology.unifiedcyberontology.org/uco/action/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.org/shapes/sh-uco-time>
	a owl:Ontology ;
	rdfs:comment "This shapes file should be filled in for at least mapped classes and properties when the upstream ontology does not provide SHACL shapes, or when draft concepts are added to the profile ontology."@en ;
	owl:imports
		<http://example.org/ontology/uco-time> ,
		<http://example.org/shapes/sh-time-editors-draft>
		;
	.

sh-uco-time:InstantaneousPerdurant-disjointWith-ProperIntervalicPerdurant-shape
	a sh:NodeShape ;
	sh:not [
		a sh:NodeShape ;
		sh:class drafting:ProperIntervalicPerdurant ;
	] ;
	sh:targetClass drafting:InstantaneousPerdurant ;
	.

sh-uco-time:InstantaneousPerdurant-shape
	a sh:NodeShape ;
	sh:property [
		a sh:PropertyShape ;
		sh:class time:Instant ;
		sh:path time:hasTime ;
	] ;
	sh:targetClass drafting:InstantaneousPerdurant ;
	.

sh-uco-time:IntervalicPerdurant-shape
	a sh:NodeShape ;
	sh:property [
		a sh:PropertyShape ;
		sh:class time:Interval ;
		sh:path time:hasTime ;
	] ;
	sh:targetClass drafting:IntervalicPerdurant ;
	.

sh-uco-time:ProperIntervalicPerdurant-shape
	a sh:NodeShape ;
	sh:property [
		a sh:PropertyShape ;
		sh:class time:ProperInterval ;
		sh:path time:hasTime ;
	] ;
	sh:targetClass drafting:ProperIntervalicPerdurant ;
	.

sh-uco-time:RelatedInstantaneousPerdurant-shape
	a sh:NodeShape ;
	rdfs:comment "This shape is used for reviewing the subjects or objects of properties that have an instantaneous perdurant class as domain or range.  sh:targetSubjectsOf tests the property domains, and sh:targetObjectsOf the ranges."@en ;
	sh:class drafting:Perdurant ;
	sh:not [
		a sh:NodeShape ;
		sh:class drafting:ProperIntervalicPerdurant ;
	] ;
	sh:targetObjectsOf
		drafting:hasBeginning ,
		drafting:hasEnd ,
		drafting:inside
		;
	.

sh-uco-time:RelatedPerdurant-shape
	a sh:NodeShape ;
	rdfs:comment "This shape is used for reviewing the subjects or objects of properties that have a perdurant class (or intervalic perdurant class not specified to be proper-intervalic) as domain or range.  sh:targetSubjectsOf tests the property domains, and sh:targetObjectsOf the ranges."@en ;
	sh:class drafting:Perdurant ;
	sh:targetObjectsOf
		drafting:after ,
		drafting:before ,
		drafting:intervalAfter ,
		drafting:intervalBefore
		;
	sh:targetSubjectsOf
		drafting:after ,
		drafting:before ,
		drafting:hasBeginning ,
		drafting:hasEnd ,
		drafting:inside ,
		drafting:intervalAfter ,
		drafting:intervalBefore
		;
	.

sh-uco-time:RelatedProperIntervalicPerdurant-shape
	a sh:NodeShape ;
	rdfs:comment "This shape is used for reviewing the subjects or objects of properties that have a proper-intervalic perdurant class as domain or range.  sh:targetSubjectsOf tests the property domains, and sh:targetObjectsOf the ranges."@en ;
	sh:class drafting:Perdurant ;
	sh:not [
		a sh:NodeShape ;
		sh:class drafting:InstantaneousPerdurant ;
	] ;
	sh:targetObjectsOf
		drafting:intervalAfter ,
		drafting:intervalBefore ,
		drafting:intervalContains ,
		drafting:intervalDisjoint ,
		drafting:intervalDuring ,
		drafting:intervalEquals ,
		drafting:intervalFinishedBy ,
		drafting:intervalFinishes ,
		drafting:intervalIn ,
		drafting:intervalMeets ,
		drafting:intervalMetBy ,
		drafting:intervalOverlappedBy ,
		drafting:intervalOverlaps ,
		drafting:intervalStartedBy ,
		drafting:intervalStarts ,
		uco-action:phase ,
		uco-action:subaction
		;
	sh:targetSubjectsOf
		drafting:intervalAfter ,
		drafting:intervalBefore ,
		drafting:intervalContains ,
		drafting:intervalDisjoint ,
		drafting:intervalDuring ,
		drafting:intervalEquals ,
		drafting:intervalFinishedBy ,
		drafting:intervalFinishes ,
		drafting:intervalIn ,
		drafting:intervalMeets ,
		drafting:intervalMetBy ,
		drafting:intervalOverlappedBy ,
		drafting:intervalOverlaps ,
		drafting:intervalStartedBy ,
		drafting:intervalStarts ,
		uco-action:phase ,
		uco-action:subaction
		;
	.

sh-uco-time:intervalEquals-intervalIn-disjointProperties-shape
	a sh:NodeShape ;
	sh:property [
		a sh:PropertyShape ;
		sh:disjoint drafting:intervalIn ;
		sh:path drafting:intervalEquals ;
	] ;
	sh:targetSubjectsOf drafting:intervalEquals ;
	.

